<% include ../partials/header.ejs %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit Review</h1>
        <div style="width:30%; margin:25px auto;">
            <form action="/campgrounds/<%= campground_id %>/reviews/<%= review_id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="number" name="review[rating]" placeholder="rating">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="review[text]" placeholder="text"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground_id %>">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer.ejs %>